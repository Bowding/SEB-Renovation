<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".QuiescentState">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv0"
            android:layout_width="900dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:src="@drawable/guitars" />

        <TextView
            android:layout_width="2dp"
            android:layout_height="600dp"
            android:layout_weight="0"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:src="@drawable/uon_logo" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="Science &amp; Engineering Buliding"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#a7bdd6"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingLeft="50dp"
                android:paddingTop="15dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.08"
                    android:src="@drawable/faculty2" />

                <TextView
                    android:id="@+id/faculty_info_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="Faculties"
                    android:textColor="#616161"
                    android:textColorLink="@android:color/darker_gray"
                    android:textSize="30sp" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="#616161" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#a7bdd6"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingLeft="50dp"
                android:paddingTop="15dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.09"
                    android:src="@drawable/professor2" />

                <TextView
                    android:id="@+id/professor_info_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="Professors"
                    android:textColor="#616161"
                    android:textColorLink="@android:color/darker_gray"
                    android:textSize="30sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="#616161" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#a7bdd6"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingLeft="50dp"
                android:paddingTop="15dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.08"
                    android:src="@drawable/lab2" />

                <TextView
                    android:id="@+id/lab_info_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="laboratories"
                    android:textColor="#616161"
                    android:textColorLink="@android:color/darker_gray"
                    android:textSize="30sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:background="#616161" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#a7bdd6"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingLeft="50dp"
                android:paddingTop="15dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.12"
                    android:src="@drawable/path2" />

                <TextView
                    android:id="@+id/find_path_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:text="Find Your Path"
                    android:textColor="#616161"
                    android:textColorLink="@android:color/darker_gray"
                    android:textSize="30sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/btnSignin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="Sign In"
                android:textSize="30sp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:layout_marginLeft="48dp"
                android:background="@android:color/darker_gray"
                android:text="TextView" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>
