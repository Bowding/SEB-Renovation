<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.fose.sebinno.navigation.FacultyInfo">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="988dp"
                android:layout_height="438dp"
                android:layout_marginLeft="-50dp"
                android:layout_marginTop="-40dp"
                android:src="@drawable/faculty_1" />

            <TextView
                android:layout_width="770dp"
                android:layout_height="20dp"
                android:layout_marginLeft="-400dp"
                android:layout_marginTop="-73dp"
                android:background="#f97c4c" />

            <TextView
                android:layout_width="556dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="-580dp"
                android:layout_marginTop="0dp"
                android:background="#f97c4c"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="65dp"
                android:text="Our reputation for excellence in engineering rests on the highest standards of teaching and learning, underpinned by internationally leading research. We recruit top quality students who are taught by experienced academics who are leaders in their field."
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-545dp"
                android:layout_marginTop="-35dp"
                android:text="Overview"
                android:textColor="@android:color/white"
                android:textSize="40sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="813dp"
                android:layout_height="445dp"
                android:layout_marginLeft="480dp"
                android:layout_marginTop="-120dp"
                android:src="@drawable/faculty_2" />

            <TextView
                android:layout_width="770dp"
                android:layout_height="20dp"
                android:layout_marginLeft="-1335dp"
                android:layout_marginTop="-72dp"
                android:background="#32abdf" />

            <TextView
                android:layout_width="556dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="-735dp"
                android:background="#32abdf"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="65dp"
                android:text="Our teaching is delivered through lectures and supported by smaller tutorials and seminars with plenty of opportunity for hands-on practical sessions in our extensive engineering laboratories. Assessment is based on course and project work, examination, individual essays and presentations."
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_width="171dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-550dp"
                android:layout_marginTop="-35dp"
                android:text="Teaching"
                android:textColor="@android:color/white"
                android:textSize="40sp" 
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="591dp"
                android:layout_marginLeft="-1000dp"
                android:layout_marginTop="-200dp"
                android:src="@drawable/faculty_3" />

            <TextView
                android:layout_width="752dp"
                android:layout_height="20dp"
                android:layout_marginLeft="-730dp"
                android:layout_marginTop="-73dp"
                android:background="#ffc830" />

            <TextView
                android:layout_width="556dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="-580dp"
                android:background="#ffc830"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="65dp"
                android:text="Our graduates have skills that international, blue-chip employers are looking for, and most find lucrative employment immediately after graduating either within the engineering sector or in other sectors. A degree in engineering will help to open doors to a rich and varied set of career opportunities, all over the world. "
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-545dp"
                android:layout_marginTop="-35dp"
                android:text="Career"
                android:textColor="@android:color/white"
                android:textSize="40sp" 
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
