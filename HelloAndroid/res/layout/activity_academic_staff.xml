<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal"
    android:orientation="horizontal"
    android:showDividers="middle"
    tools:context=".AcademicStaff" >

  

    <LinearLayout
        android:id="@+id/navigation_left"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:layout_weight="1.34"
        android:orientation="vertical"
        android:weightSum="1" >

        <LinearLayout
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/tvKeyword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="professor name"
                android:inputType="textPersonName"
                android:textColor="@android:color/darker_gray" />

            <ImageView
                android:id="@+id/ivSearchButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_menu_search" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dept_staff_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/subject_divider_CS"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:gravity="left|center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:src="@android:drawable/arrow_down_float" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Computer Science" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@android:color/black"
                        android:text="TextView" />
                </LinearLayout>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/pb_0"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_weight="0.00"
                android:background="@android:color/holo_blue_light"
                android:onClick="clickOnProfessorBar" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/Pimage_NW"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.13"
                        android:src="@drawable/ic_launcher" />

                    <TextView
                        android:id="@+id/Pname_NW"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:text="Dr.Ning WANG"
                        android:textColor="@android:color/background_light"
                        android:textSize="18sp" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/pb_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:onClick="clickOnProfessorBar" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/ivAvatar_s"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.13"
                        android:src="@drawable/ic_launcher" />

                    <TextView
                        android:id="@+id/tvName_s"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:text="Professor Tao Wu"
                        android:textAllCaps="false"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="18sp" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/pb_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1.34"
                android:onClick="clickOnProfessorBar" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/ImageView01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.13"
                        android:src="@drawable/ic_launcher" />

                    <TextView
                        android:id="@+id/TextView01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:layout_weight="1"
                        android:gravity="left|center_vertical"
                        android:text="Dr Binjie Hu"
                        android:textAllCaps="false"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="18sp" />
                </LinearLayout>
            </FrameLayout>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="2dp"
        android:layout_height="495dp"
        android:layout_marginTop="15dp"
        android:background="@android:color/darker_gray" />

    <FrameLayout
        android:id="@+id/professor_detail_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:layout_weight="3" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="235dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/ivAvatar"
                    android:layout_width="140dp"
                    android:layout_height="180dp"
                    android:layout_margin="30dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="2dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="50dp"
                    android:layout_weight="1"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="35dp"
                        android:layout_weight="1"
                        android:text="Dr. Ning WAN"
                        android:textColor="@android:color/holo_blue_light"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="30dp"
                        android:layout_weight="1"
                        android:text="Computer Science" />

                    <TextView
                        android:id="@+id/tvOffice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:text="SEB 432" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="500dp"
                android:layout_height="2dp"
                android:layout_marginLeft="30dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/tvBio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:text="Dr John Cartlidge has a first class BSc (Hons) in Artificial Intelligence &amp; Mathematics (University of Leeds, UK, 2000) and a PhD in Artificial Intelligence (University of Leeds, UK, 2004; supervised by Professor Seth Bullock). After successfully defending his PhD thesis on evolutionary adaptation in competitive computer systems, Dr Cartlidge spent four years in industry working on a variety of commercial research projects." />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>
